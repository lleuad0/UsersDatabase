<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginBottom="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/hint_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/image_hint" />

        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_first_name_layout"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/label_first_name"
            android:maxLines="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_first_name_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_last_name_layout"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/label_last_name"
            android:maxLines="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_last_name_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_email_layout"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_email"
            android:maxLines="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_email_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
